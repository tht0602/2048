<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <tzu.hsuan.tseng.tooowlforate.FlipNumberView
        android:id="@+id/fnv_one"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone"/>

    <View
        android:id="@+id/view_test"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="#456789"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:id="@+id/view_test2"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="#987654"
        app:layout_constraintTop_toBottomOf="@id/view_test"
        app:layout_constraintStart_toStartOf="@id/view_test"/>

    <View
        android:id="@+id/view_test3"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="#549867"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:id="@+id/view_test4"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="#985476"
        android:rotationX="-90"
        app:layout_constraintTop_toBottomOf="@id/view_test"
        app:layout_constraintStart_toStartOf="@id/view_test"/>

</androidx.constraintlayout.widget.ConstraintLayout>